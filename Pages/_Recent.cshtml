@using Microsoft.AspNetCore.Identity
@using WeTube.Data
@inject ApplicationDbContext db




<div class="recommended-info">
    <h3>Recent Videos</h3>
</div>
@foreach (var item in db.Movie.OrderByDescending(x => x.TimeStamp).Take(3))
{
    <div class="col-md-4 resent-grid recommended-grid slider-top-grids">
        <div class="resent-grid-img recommended-grid-img">
            <a asp-page="/Single" asp-route-id="@item.Id"><video class="video-recent"  src="@item.StorageUrl"></video></a>         
          
        </div>
        <div class="resent-grid-info recommended-grid-info">
            <h3><a asp-page="/Single" asp-route-id="@item.Id" class="title title-info">@item.Description</a></h3>
            Posted By: @db.Users.Where(x=> x.Id == item.ApplicationUserId).FirstOrDefault().FullName
           
        </div>
    </div>
}

<div class="clearfix"> </div>

