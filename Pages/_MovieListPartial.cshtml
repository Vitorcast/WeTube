<div id="Carousel" class="carousel slide" data-ride="carousel" data-interval="false">
    
    <div class="carousel-inner">
        <div class="item active">
            <div class="row">
              
                @foreach (var item in db.Movie.Take(4))
                {
                    <div class="col-xs-3">
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.Id">
                            <video width="400" height="300">
                                <source src="@item.StorageUrl" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </a>
                    </div>
                        @*<div class="col-xs-3"><a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" /></a></div>*@
                }

              </div>
        </div>
        <div class="item">
            <div class="row">
                @foreach (var item in db.Movie.Take(4).Skip(4))
                {
                <div class="col-xs-3"><a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" /></a></div>
                }
            </div>
        </div>
        <div class="item">
            <div class="row">
